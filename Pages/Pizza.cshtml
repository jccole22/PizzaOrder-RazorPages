@page
@model PizzaOrder.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Pizza Choices</h1>
        <h4>Make selection or create a custom pizza!</h4>

        <p class="smallText"><i>Only one per order.</i></p>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza</h3>
                            <p style="text-align:left;">Make your own pizza with our pizza maker!</p>
                            <a class="btn btn-primary" style="float: left;" asp-area="" asp-page="/Forms/CreatePizza">Try Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>